<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="info.mahmoudhossam.twitter" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="7"/>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<application android:label="@string/app_name" android:icon="@drawable/twitter_icon"
		android:debuggable="false">
		<activity android:name=".Login" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="Browser" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="mahmoud.browser"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>
		<activity android:name="Tweets">
			<intent-filter>
				<action android:name="mahmoud.tweets"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>
		<activity android:name="PostStatus" android:label="New Tweet">
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT"></category>
				<action android:name="mahmoud.post"></action>
			</intent-filter>
		</activity>
	<activity android:name="MainActivity">
	<intent-filter>
		<action android:name="mahmoud.main"></action>
		<category android:name="android.intent.category.DEFAULT"></category>
	</intent-filter>
	</activity>

	</application>
</manifest>